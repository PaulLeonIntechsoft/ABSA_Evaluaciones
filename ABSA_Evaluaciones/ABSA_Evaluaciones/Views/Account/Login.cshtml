@using ABSA_Evaluaciones.Models
@model sp_logeo_Result

@{
    ViewBag.Title = "ABELIN S.A. - Evaluaciones";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/loginStyle.css")" rel="stylesheet" />
}

<div class="container">
    <div class="row centrado">
        <div class="col-1 col-sm-1 col-md-6 col-lg-7 col-xl-7">
        </div>
        <div class="col-10 col-sm-10 col-md-6 col-lg-5 col-xl-5">
            <div class="ventana-login">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h1 class="h1 text-center"><b>ABELIN S.A.</b></h1>
                    <h4 class="h4 text-center">Evaluación de Personal</h4><br>
                    <div class="form-group">
                        <label for="usuario" class="sr-only">Usuario</label>
                        @Html.TextBoxFor(m => m.chrUsrEval, "", new { @class = "form-control", id="usuario", placeholder ="Usuario"})
                        @Html.ValidationMessageFor(m => m.chrUsrEval, "", new { @class = "bg-warning" })
                    </div>
                    <div class="form-group">
                        <label for="contrasena" class="sr-only">Contrase&#241;a</label>
                        @Html.PasswordFor(m => m.chrPasEval, new { @class = "form-control", id = "contrasena", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.chrPasEval, "", new { @class = "bg-warning" })
                    </div>
                    @Html.ValidationSummary(true, "Usuario o Contraseña Incorrecta", new { @class = "bg-danger" })
                    <input type="submit" value="Ingresar" class="btn btn-primary btn-block"/>
                }
            </div>
        </div>
    </div>
</div>

